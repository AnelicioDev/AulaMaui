<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AulaMaui.MainPage"> 

   <ContentPage Title="Home">
       <ScrollView>
        <VerticalStackLayout Margin="20">
          <Label 
            Padding="10"
            Text="Meu primeiro projeto" 
            FontSize="20" 
            HorizontalOptions="Center"/>

          <Button
            x:Name="BntOla"
            HorizontalOptions="Center" 
            Text="Click aqui"
            Clicked="Bnt_clicked"/>
        </VerticalStackLayout>
      </ScrollView>
   </ContentPage>

   <ContentPage Title="Grid">
       <ScrollView>
        <VerticalStackLayout Margin="20">
          <Label 
            Padding="10"
            Text="Página Grid" 
            FontSize="20" 
            HorizontalOptions="Center"/>
        </VerticalStackLayout>
      </ScrollView>
   </ContentPage>

   <ContentPage Title="Navegação">
       <ScrollView>
        <VerticalStackLayout Margin="20">
          <Label 
            Padding="10"
            Text="Página Navegação" 
            FontSize="20" 
            HorizontalOptions="Center"/>
        </VerticalStackLayout>
      </ScrollView>
   </ContentPage>

</TabbedPage>
